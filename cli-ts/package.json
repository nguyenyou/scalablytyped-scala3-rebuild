{
	"name": "scalablytyped-cli-ts",
	"version": "0.1.0",
	"description": "TypeScript CLI implementation of ScalablyTyped converter",
	"main": "dist/main.js",
	"bin": {
		"scalablytyped-ts": "dist/main.js"
	},
	"type": "module",
	"scripts": {
		"build": "bun build src/main.ts --outdir dist --target node --format esm",
		"dev": "bun --watch src/main.ts convert",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"format": "bunx biome format --write",
		"lint": "bunx biome check --write src/tests",
		"clean": "rm -rf dist",
		"typecheck": "tsgo --noEmit && tsgo --noEmit -p tsconfig.test.json"
	},
	"dependencies": {
		"@types/tabulator-tables": "6.2.10",
		"clsx": "2.1.1",
		"scroll-into-view-if-needed": "3.1.0",
		"tabulator-tables": "6.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.3",
		"@types/bun": "latest",
		"@types/fs-extra": "^11.0.4",
		"@typescript/native-preview": "7.0.0-dev.20250904.1",
		"chalk": "^5.3.0",
		"commander": "^12.0.0",
		"fp-ts": "2.16.11",
		"fs-extra": "^11.2.0",
		"glob": "^10.3.10",
		"ora": "^8.0.1",
		"prettier": "^3.2.5",
		"ts-pattern": "5.8.0",
		"typescript": "5.9.2",
		"xxhash-wasm": "^1.0.2"
	},
	"engines": {
		"node": ">=22.19.0"
	},
	"keywords": [
		"typescript",
		"scala",
		"scalajs",
		"converter",
		"cli"
	],
	"author": "ScalablyTyped",
	"license": "MIT"
}
