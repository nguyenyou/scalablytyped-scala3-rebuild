{
  "name": "scalablytyped-cli-ts",
  "version": "0.1.0",
  "description": "TypeScript CLI implementation of ScalablyTyped converter",
  "main": "dist/main.js",
  "bin": {
    "scalablytyped-ts": "dist/main.js"
  },
  "type": "module",
  "scripts": {
    "build": "bun build src/main.ts --outdir dist --target node --format esm",
    "dev": "bun --watch src/main.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "typescript": "^5.9.2",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "xxhash-wasm": "^1.0.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "typescript",
    "scala",
    "scalajs",
    "converter",
    "cli"
  ],
  "author": "ScalablyTyped",
  "license": "MIT"
}
