{
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noShadowRestrictedNames": "off",
				"noApproximativeNumericConstant": "off",
				"useIterableCallbackReturn": "off",
				"useAdjacentOverloadSignatures": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off",
				"noFlatMapIdentity": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
